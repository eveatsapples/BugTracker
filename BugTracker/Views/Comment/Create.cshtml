@model EditCommentViewModel

@section scripts{
    @Scripts.Render("~/Scripts/jquery.unobtrusive*")
    @Scripts.Render("~/Scripts/jquery.validate*")
}

@using (Html.BeginForm("Create", "Comment", new { id = Model.TicketID },
                   FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Comment:</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TicketID)

        <div class="form-group">
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Comment, new { @class = "form-control editor", placeholder = "Comment", rows = 5, columns = 10 })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


