@model BugTracker.Models.ViewModels.EditTicketViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script type="text/javascript">
        $(function () {
            tinymce.init({
                selector: '.editor'
            });
        });
    </script>
}

@using (Html.BeginForm("Edit", "Ticket", new { id = Model.ID, projectId = Model.ProjectID },
                   FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProjectID)

        <div class="form-group">
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Title, new { @class = "form-control", placeholder = "Title" })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control editor", placeholder = "Description", rows = 5, columns = 10 })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <h5>Type:</h5>
        <p>
            @Html.RadioButtonFor(model => model.TypeID, "Bug")Bug
            @Html.RadioButtonFor(model => model.TypeID, "Feature")Feature
            @Html.RadioButtonFor(model => model.TypeID, "Database")Database
            @Html.RadioButtonFor(model => model.TypeID, "Support")Support
        </p>

        <h5>Priority:</h5>
        <p>
            @Html.RadioButtonFor(model => model.PriorityID, "Low")Low
            @Html.RadioButtonFor(model => model.PriorityID, "Medium")Medium
            @Html.RadioButtonFor(model => model.PriorityID, "High")High
        </p>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


