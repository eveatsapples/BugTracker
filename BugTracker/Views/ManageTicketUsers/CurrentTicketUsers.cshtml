@model List<TicketUserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Currently assigned to:</h2>

<table class="table">
    <tr>
        <th>
            User Name
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.UserName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <form method="post" action="@Url.Action("RemoveTicketUsers", "ManageTicketUsers", new { id = item.ID, userID = item.UserID })" id="edit-button" class="edit-delete-btns-forms">
                    <button class="btn btn-primary admin-btns" type="submit">Unassign from ticket</button>
                </form>
            </td>
        </tr>
    }
</table>
